<MenuItem x:Class="Adventure.Ui.SaveLoad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adventure.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Header="Speicherstand">
    <MenuItem Header="Laden">
        <MenuItem Header="1" Command="{Binding LoadGame}" CommandParameter="1"/>
        <MenuItem Header="2" Command="{Binding LoadGame}" CommandParameter="2"/>
        <MenuItem Header="3" Command="{Binding LoadGame}" CommandParameter="3"/>
        <MenuItem Header="4" Command="{Binding LoadGame}" CommandParameter="4"/>
        <MenuItem Header="5" Command="{Binding LoadGame}" CommandParameter="5"/>
    </MenuItem>
    <MenuItem Header="Neu">
        <MenuItem Header="1" Command="{Binding NewGame}" CommandParameter="1"/>
        <MenuItem Header="2" Command="{Binding NewGame}" CommandParameter="2"/>
        <MenuItem Header="3" Command="{Binding NewGame}" CommandParameter="3"/>
        <MenuItem Header="4" Command="{Binding NewGame}" CommandParameter="4"/>
        <MenuItem Header="5" Command="{Binding NewGame}" CommandParameter="5"/>
    </MenuItem>
</MenuItem>
