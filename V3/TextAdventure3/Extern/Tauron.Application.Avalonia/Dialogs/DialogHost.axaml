<TemplatedControl xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                  x:Class="Tauron.Application.Avalonia.Dialogs.DialogHost">
    <TemplatedControl.Template>
        <ControlTemplate>
            <Grid>
                <ContentControl x:Name="DialogContent" IsEnabled="True" IsVisible="False" VerticalAlignment="Center"
                                HorizontalAlignment="Center" MinWidth="600" Content="{TemplateBinding Dialog}" />
                <ContentControl x:Name="MainContent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                Content="{TemplateBinding Main}" />
            </Grid>
        </ControlTemplate>
    </TemplatedControl.Template>
</TemplatedControl>